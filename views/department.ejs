          <label for="empid">Department Name</label>
          <input type="text" class="form-control" name="empid" placeholder="Department Name">
        </div>
        <div class="form-group col-md-4 pl-3">
          <label for="name">Department Short Name</label>
          <input type="hidden" name="id" value="">
          <input type="text" class="form-control" name="name" value="" placeholder="Short Name">
      </div>
      <div class="form-group col-md-4 pl-3">
        <label for="name">Department Code</label>
        <input type="hidden" name="id" value="">
        <input type="text" class="form-control" name="name" value="" placeholder="Department Code">
    </div>
    </div>
    <div class="form-group p-3">
    <button type="submit" class="btn btn-primary">Add Department</button>
    </div>
</form>
</div>


